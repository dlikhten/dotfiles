' Highlight search occurrences
set hlsearch
' Use incremental search
set incsearch

' Smart / auto indenting
set smartindent
set autoindent

' 4 spaces = 1 tab
set tabstop=4
set shiftwidth=4
' Don't convert tabs to spaces
set noexpandtab

' Use macvim
set gvimpath=mvim

' When changing tabs, immediately enter normal mode
:set startnormalmode

' show line numbers
:set number

' highlight the cursor line
:set cursorline
